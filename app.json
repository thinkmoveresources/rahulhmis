{
  "expo": {
    "name": "hmis",
    "slug": "hmis",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",      
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "packagerOpts": {
        "config": "metro.config.js",
        "sourceExts": ["js", "jsx", "css"]
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "thinkmoveresources.com"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    
      "plugins": [ [ "@react-native-voice/voice", { "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone", "speechRecogntionPermission": "Allow $(PRODUCT_NAME) to securely recognize user speech" } ] ]
    
  }
}
